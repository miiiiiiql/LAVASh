@model LAVASh.Models.PlaceModel
@{
    ViewData["Title"] = "Новое место";
}
<div class="text-center">
    <h2>Новое место</h2>
    <form asp-action="AddPlace" asp-controller="Head" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div>
                <label asp-for="Name">Имя места</label><br />
                <input type="text" asp-for="Name" />
                <span asp-validation-for="Name" />
            </div>
            <div>
                <label asp-for="HelpStrings">Описание</label><br />
                <textarea asp-for="HelpStrings"></textarea>
                <span asp-validation-for="HelpStrings" />
            </div>
            <div>
                <input type="submit" value="Создать" />
            </div>
        </div>
    </form>
</div>
