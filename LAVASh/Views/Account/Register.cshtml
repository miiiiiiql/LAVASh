@model LAVASh.Models.RegisterModel
 

 <div class = "text-center">
     <h2>Регистрация</h2>
     <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div>
                <label asp-for="Email">Введите Email</label><br />
                <input type="text" asp-for="Email" />
                <span asp-validation-for="Email" />
            </div>
            <div>
                <label asp-for="Firstname">Введите Имя</label><br />
                <input type="text" asp-for="Firstname" />
                <span asp-validation-for="Firstname" />
            </div>
            <div>
                <label asp-for="Secondname">Введите Фамилию</label><br />
                <input type="text" asp-for="Secondname" />
                <span asp-validation-for="Secondname" />
            </div>
            <div>
                <label asp-for="Password">Введите пароль</label><br />
                <input asp-for="Password" />
                <span asp-validation-for="Password" />
            </div>
            <div>
                <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                <input asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" />
            </div>
            <div>
                <input type="submit" value="Регистрация" />
            </div>
        </div>
    </form>
 </div>
